<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="wrap_content"
 android:layout_margin="@dimen/article_catalog_size"
    >

    <LinearLayout
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/article_catalog_size"
        >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_leavemessage"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
android:orientation="vertical"
            >
<TextView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textColor="@color/blobTitle"
    android:text="留言内容"
    android:id="@+id/messages_list_Content"
    />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/messages_list_ip"
                android:layout_marginTop="@dimen/article_catalog_size"
android:text="127.0.0.1"
                android:textSize="@dimen/sencondary_val"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="2017-01-13"
                android:layout_marginTop="@dimen/article_catalog_size"
                android:id="@+id/messages_list_date"
                android:textSize="@dimen/sencondary_val"
                />

        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>

