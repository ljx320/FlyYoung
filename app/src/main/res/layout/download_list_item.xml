<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/article_catalog_size"
    >
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/article_catalog_size"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/downloads_list_Title"
            android:textColor="@color/blobTitle"
            android:gravity="center"
            android:text="名称"
            android:ellipsize="end"
            android:maxLines="1"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/article_catalog_size"
            android:text="20kb"
            android:id="@+id/downloads_list_length"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/article_catalog_size"
            android:text="说明"
            android:id="@+id/downloads_list_description"
            android:maxLines="1"
            android:ellipsize="end"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/article_catalog_size"
            android:text="2017-01-13"
            android:id="@+id/downloads_list_Date"
            />


    </LinearLayout>

</android.support.v7.widget.CardView>

