<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/article_catalog_size"
    android:id="@+id/album_cardView"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/article_catalog_size"

        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:id="@+id/album_list_ShowImage"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/article_catalog_size"
            android:textColor="@color/blobTitle"
            android:text="相册名称"
            android:id="@+id/album_list_Name"
            android:layout_gravity="center"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/article_catalog_size"
            android:text="0张照片"
            android:id="@+id/album_list_Count"
           android:layout_gravity="center"
            android:textSize="@dimen/sencondary_val"
            />

    </LinearLayout>

</android.support.v7.widget.CardView>

