<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:padding="@dimen/activity_horizontal_margin"
    >

    <ImageView
        android:layout_width="@dimen/activity_horizontal_margin"
        android:layout_height="@dimen/activity_horizontal_margin"
        android:src="@drawable/ic_red"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:id="@+id/popup_bgcolor_red"
        />
    <ImageView
        android:layout_width="@dimen/activity_horizontal_margin"
        android:layout_height="@dimen/activity_horizontal_margin"
        android:src="@drawable/ic_yeelow"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:id="@+id/popup_bgcolor_yellow"
        />
    <ImageView
        android:layout_width="@dimen/activity_horizontal_margin"
        android:layout_height="@dimen/activity_horizontal_margin"
        android:src="@drawable/ic_blue"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:id="@+id/popup_bgcolor_blue"
        />
    <ImageView
        android:layout_width="@dimen/activity_horizontal_margin"
        android:layout_height="@dimen/activity_horizontal_margin"
        android:src="@drawable/ic_green"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:id="@+id/popup_bgcolor_green"
        />
    <ImageView
        android:layout_width="@dimen/activity_horizontal_margin"
        android:layout_height="@dimen/activity_horizontal_margin"
        android:src="@drawable/ic_pick"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:id="@+id/popup_bgcolor_pick"
        />
</LinearLayout>