<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/article_catalog_size"
    android:id="@+id/article_list_Container"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/article_catalog_size"
        >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/article_list_image"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/article_catalog_size"
            >

            <TextView
                android:id="@+id/article_list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="文章标题"
                android:textColor="@color/blobTitle"

                android:maxLines="1"
                android:ellipsize="end"
                />

            <TextView
                android:id="@+id/article_list_description"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/article_catalog_margin"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="文章描述"
                android:textSize="@dimen/sencondary_val"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/article_catalog_margin"
                >

                <TextView
                    android:id="@+id/article_list_catalog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/article_catalog_margin"
                    android:text="about android"
                    android:textColor="@color/blobTitle"
                    android:textSize="@dimen/sencondary_val"/>

                <TextView
                    android:id="@+id/article_list_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/article_catalog_margin"
                    android:layout_marginTop="@dimen/article_catalog_margin"
                    android:text="2017-01-13 07:48"
                    android:textColor="@color/articleDate"
                    android:textSize="@dimen/sencondary_val"
                    android:ellipsize="end"
                    android:maxLines="1"
                    />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>

